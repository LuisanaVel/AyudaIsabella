  <script>
    /* ============================
       Comportamiento (copiar, modal, updates)
       ============================ */

    // Modal
    const modal = document.getElementById('modal');
    document.getElementById('openDonate').onclick = () => { modal.style.display='flex'; }
    document.getElementById('openDonate2').onclick = () => { modal.style.display='flex'; }
    document.getElementById('closeModal').onclick = () => { modal.style.display='none'; }
    window.addEventListener('click', (e) => { if(e.target === modal) modal.style.display='none'; });

    // Copiar al portapapeles
    function copyText(text){
      if(!navigator.clipboard) {
        // fallback
        const ta = document.createElement('textarea');
        ta.value = text;
        document.body.appendChild(ta);
        ta.select();
        try{ document.execCommand('copy'); alert('Copiado: ' + text); } catch(e){ alert('No se pudo copiar'); }
        document.body.removeChild(ta);
        return;
      }
      navigator.clipboard.writeText(text).then(()=>{
        // peque√±a confirmaci√≥n
        const msg = document.createElement('div');
        msg.textContent = 'Copiado al portapapeles';
        msg.style.position='fixed';
        msg.style.right='18px';
        msg.style.bottom='18px';
        msg.style.background='rgba(0,0,0,0.75)';
        msg.style.color='#fff';
        msg.style.padding='8px 12px';
        msg.style.borderRadius='8px';
        document.body.appendChild(msg);
        setTimeout(()=>msg.remove(),1500);
      }, ()=> alert('No se pudo copiar'));
    }

    document.querySelectorAll('[data-copy]').forEach(btn=>{
      btn.addEventListener('click',()=>copyText(btn.getAttribute('data-copy')));
    });

    // Botones WhatsApp
    const waPhone = '+584128247639';
    document.getElementById('waContact').addEventListener('click', (e)=>{
      e.preventDefault();
      const text = encodeURIComponent('Hola G√©nesis, vi la campa√±a de Isabella y quiero comunicarme.');
      window.open('https://wa.me/' + waPhone.replace(/\D/g,'') + '?text=' + text, '_blank');
    });
    document.getElementById('waPagoMovil').addEventListener('click', (e)=>{
      e.preventDefault();
      const text = encodeURIComponent('Hola, quiero hacer un pago m√≥vil para Isabella. ¬øMe confirmas los pasos?');
      window.open('https://wa.me/' + waPhone.replace(/\D/g,'') + '?text=' + text, '_blank');
    });

    // Actualizaciones: guardar en localStorage
    const updatesList = document.getElementById('updatesList');
    const addUpdateBtn = document.getElementById('addUpdateBtn');
    const newUpdate = document.getElementById('newUpdate');
    const clearUpdates = document.getElementById('clearUpdates');

    function renderUpdates(){
      // inicia con el elemento por defecto si no hay nada
      const raw = localStorage.getItem('isabella_updates');
      let arr = raw ? JSON.parse(raw) : [];
      // si no hay nada, mantenemos el primer mensaje (ya en HTML), pero si hay items, los mostramos
      updatesList.innerHTML = '';
      if(arr.length === 0){
        const el = document.createElement('div');
        el.className='update-item';
        el.innerHTML = '<time>16 oct 2025</time><div>Pr√≥ximamente compartiremos avances, resultados de los ex√°menes y fotos de la evoluci√≥n de Isabella. Gracias por acompa√±arnos.</div>';
        updatesList.appendChild(el);
        return;
      }
      arr.forEach(u=>{
        const el = document.createElement('div');
        el.className='update-item';
        const t = new Date(u.date);
        el.innerHTML = '<time>'+ t.toLocaleDateString('es-VE', {day:'2-digit', month:'short', year:'numeric'}) +'</time><div>'+ (u.text.replace(/\n/g,'<br>')) +'</div>';
        updatesList.appendChild(el);
      });
    }

    addUpdateBtn.addEventListener('click', ()=>{
      const text = newUpdate.value && newUpdate.value.trim();
      if(!text) return alert('Escribe una actualizaci√≥n antes de agregarla.');
      const raw = localStorage.getItem('isabella_updates');
      const arr = raw ? JSON.parse(raw) : [];
      arr.unshift({text, date: new Date()});
      localStorage.setItem('isabella_updates', JSON.stringify(arr));
      newUpdate.value='';
      renderUpdates();
    });

    clearUpdates.addEventListener('click', ()=>{
      if(confirm('¬øEliminar todas las actualizaciones guardadas localmente?')) {
        localStorage.removeItem('isabella_updates');
        renderUpdates();
      }
    });

    renderUpdates();

    // Mejora: evitar que links se abran en la misma pesta√±a en Netlify (ya usamos target=_blank cuando aplica)
  </script>
